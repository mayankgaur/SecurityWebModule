@model SecurityWebModule.Models.LocateModel


<span class="alert-danger">
    @Html.ValidationSummary()
</span>
@*@using (Html.BeginForm("Create", "Home", FormMethod.Post))
{*@
    @using (Ajax.BeginForm("Create", "Home", new AjaxOptions() { HttpMethod = "POST" }))
    {
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add/Edit Locates</h4>
                <button type="button" class="close" data-dismiss="modal">
                    ×
                </button>

            </div>
            <div class="modal-body">

                <div class="form-group">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Name" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @placeholder = "Description" })
                    @Html.ValidationMessageFor(model => model.Description)
                    @*<input class="form-control" placeholder="Login Password"
                        type="password" id="inputPassword" />*@
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.IsPublic, "Public/Private ")
                    @Html.CheckBoxFor(model => model.IsPublic)
                    @Html.ValidationMessageFor(model => model.IsPublic)
                </div>

            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary button button4">Continue</button>
                <button type="button" id="btnHideModal" data-dismiss="modal" class="btn btn-primary button button4">
                    Cancel
                </button>
            </div>

        </div>
    }
